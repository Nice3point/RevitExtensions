        <PackageReference Include="ModularPipelines" Version="2.47.8"/>
        <PackageReference Include="ModularPipelines.Git" Version="2.47.8"/>
        <PackageReference Include="ModularPipelines.GitHub" Version="2.47.8"/>
        <PackageReference Include="ModularPipelines.DotNet" Version="2.47.8"/>
        <PackageReference Include="JetBrains.Annotations" Version="2025.2.2"/>
        <PackageReference Include="Microsoft.VisualStudio.SolutionPersistence" Version="1.0.52"/>
        <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="9.0.10"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="appsettings.json" CopyToOutputDirectory="PreserveNewest"/>
    </ItemGroup>

</Project>
